<% include partials/_header%>

<div class="container">
	<div class="row">
		<!--Formulario-->
		<div class="col-md-4">
			<div class="card">
				<div class="card-body">
					<form action="/agregar" method="POST">
						<div class="form-group">
							<input type="text" name="titulo" placeholder="Inserta un título" class="form-control">
						</div>
						<div class="form-group">
							<textarea name="descripcion" cols="80" class="form-control" placeholder="Inserte una descripción"></textarea>
						</div>
						<button class="btn btn-primary btn-block" type="submit">Añadir</button>
					</form>
				</div>
			</div>
		</div>

	


<!--Lista-->
	<div class="col-md-7">
		<table class="table table-bordered table-hover">
			<thead>
				<tr>
					<th>No</th>
					<th>Título</th>
					<th>Descripción</th>
					<th>Opciones</th>
				</tr>
			</thead>
			<tbody>
				<% for(var i = 0; i < tasks.length; i++){ %>
					<tr>
						<td><%= i + 1 %></td>
						<td><%= tasks[i].titulo %></td>
						<td><%= tasks[i].descripcio %></td>
						<td>
							<a href="/listo/<%= tasks[i]._id %>" class="btn <%= tasks[i].estatus ? 'btn-success' : 'btn-dark' %>">Listo</a>
							<a href="/eliminar/<%= tasks[i]._id %>" class="btn btn-danger">Eliminar</a>
							<a href="/editar/<%= tasks[i]._id %>" class="btn btn-info">Editar</a>
						</td>
					</tr>
				<% } %>
			</tbody>
				
			</table>
		</div>
	</div>
</div>
<% include partials/_footer%>